<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    tools:context=".ResultActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seu IMC é"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textview_result"
        tools:text="19.0175"
        android:textSize="34dp"
        android:textAlignment="center"
        android:padding="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textview_classification"
        tools:text="Classificação: Normal"
        android:textSize="24dp"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tabela IMC"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textAlignment="center"
        android:layout_marginTop="60dp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="8dp"
        android:stretchColumns="1">

        <TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="Menor que 18.5"
                android:textColor="#6495ED"
                android:textSize="18dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="Abaixo do peso"
                android:textColor="#6495ED"
                android:textSize="18dp"
                android:layout_marginTop="5dp"/>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="Entre 18.5 e 24.9"
                android:textColor="#33CC33"
                android:textSize="18dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="Normal"
                android:textColor="#33CC33"
                android:textSize="18dp"
                android:layout_marginTop="5dp"/>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="Entre 25.0 e 29.9"
                android:textColor="#FFBF00"
                android:textSize="18dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="Sobrepeso - I"
                android:textColor="#FFBF00"
                android:textSize="18dp"
                android:layout_marginTop="5dp"/>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="Entre 30.0 e 39.9"
                android:textColor="#FF8A00"
                android:textSize="18dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="Obesidade - III"
                android:textColor="#FF8A00"
                android:textSize="18dp"
                android:layout_marginTop="5dp"/>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="Maior que 40.0"
                android:textColor="#FF0000"
                android:textSize="18dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="Obesidade grave - III"
                android:textColor="#FF0000"
                android:textSize="18dp"
                android:layout_marginTop="5dp"/>
        </TableRow>

    </TableLayout>
</LinearLayout>